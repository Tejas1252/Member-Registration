<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterSearch"
    android:background="@drawable/gd">
    <ImageView
        android:id="@+id/uiv"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/acc"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/change"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:text="change"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ID"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"/>
    <TextView
        android:id="@+id/id3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"/>
    <EditText
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="240dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="E_mail"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"/>
    <EditText
        android:id="@+id/email3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="280dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Address"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"/>
    <EditText
        android:id="@+id/address3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:inputType="textMultiLine"
        android:layout_marginRight="20dp"
        android:layout_marginTop="320dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Contact"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp"/>
    <EditText
        android:id="@+id/contact3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:inputType="date"
        android:layout_marginRight="20dp"
        android:layout_marginTop="410dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="DOB"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"/>
    <EditText
        android:id="@+id/DOB3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="450dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="DOA"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="490dp"/>
    <EditText
        android:id="@+id/DOA3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/cold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="490dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="State"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="530dp"/>
    <EditText
        android:id="@+id/state3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/cold"
        android:layout_marginTop="530dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="City"
        android:textSize="20sp"
        android:textColor="@color/cold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="570dp"/>
    <EditText
        android:id="@+id/city3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/cold"
        android:layout_marginTop="570dp"/>
    <Button
        android:id="@+id/update2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgd"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="630dp"
        android:text="Update"/>
    <Button
        android:id="@+id/delete2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgd"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="630dp"
        android:text="Delete"/>
</RelativeLayout>